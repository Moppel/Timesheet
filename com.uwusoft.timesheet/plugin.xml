<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="com.uwusoft.timesheet.storageservice" name="StorageService" schema="schema/com.uwusoft.timesheet.storageservice.exsd"/>
   <extension-point id="com.uwusoft.timesheet.submissionservice" name="SubmissionService" schema="schema/com.uwusoft.timesheet.submissionservice.exsd"/>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.uwusoft.timesheet.TimesheetApp">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.uwusoft.timesheet.Perspective"
            id="com.uwusoft.timesheet.perspective"
            name="Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.uwusoft.timesheet.TasksView"
            id="com.uwusoft.timesheet.tasksview"
            name="Today&apos;s Tasks">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="true"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="com.uwusoft.timesheet.tasksview">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="Main">
            <command
                  commandId="Timesheet.changeTask"
                  style="push">
            </command>
            <command
                  commandId="Timesheet.checkout"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  style="push">
            </command>
         </menu>
         <command
               commandId="org.eclipse.ui.help.aboutAction"
               label="About"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.uwusoft.timesheet.application"
            name="Timesheet">
         <property
               name="appName"
               value="Timesheet">
         </property>
         <property
               name="windowImages"
               value="icons/clock.png">
         </property>
         <property
               name="startupProgressRect"
               value="5,275,445,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="aboutImage"
               value="icons/clock.png">
         </property>
         <property
               name="aboutText"
               value="This is Timesheet.">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.uwusoft.timesheet.preferences.TimesheetPreferencePage"
            id="com.uwusoft.timesheet.preferences.TimesheetPreferencePage"
            name="Timesheet Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.uwusoft.timesheet.preferences.TimesheetPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.uwusoft.timesheet.commands.ChangeTaskHandler"
            id="Timesheet.changeTask"
            name="Change Task">
      </command>
      <command
            defaultHandler="com.uwusoft.timesheet.commands.SetBreakHandler"
            id="Timesheet.setBreak"
            name="Set Break">
      </command>
      <command
            defaultHandler="com.uwusoft.timesheet.commands.CheckoutHandler"
            id="Timesheet.checkout"
            name="Check out">
         <commandParameter
               id="Timesheet.commands.shutdownTime"
               name="shutdownTime"
               optional="true">
         </commandParameter>
      </command>
      <command
            defaultHandler="com.uwusoft.timesheet.commands.CheckinHandler"
            id="Timesheet.checkin"
            name="Check in">
         <commandParameter
               id="Timesheet.commands.startTime"
               name="startTime"
               optional="true">
         </commandParameter>
         <commandParameter
               id="Timesheet.commands.storeWeekTotal"
               name="storeWeekTotal"
               optional="true">
         </commandParameter>
      </command>
      <command
            defaultHandler="com.uwusoft.timesheet.commands.WholeDayTaskHandler"
            id="Timesheet.commands.wholeDayTask"
            name="Whole day">
         <commandParameter
               id="Timesheet.commands.task"
               name="task"
               optional="true">
         </commandParameter>
      </command>
      <command
            defaultHandler="com.uwusoft.timesheet.commands.ImportTasksHandler"
            id="Timesheet.importTasks"
            name="Import Tasks">
      </command>
      <command
            defaultHandler="com.uwusoft.timesheet.commands.SubmissionHandler"
            id="Timesheet.submit"
            name="Submit week">
         <commandParameter
               id="Timesheet.commands.weekNum"
               name="weekNum"
               optional="true">
         </commandParameter>
      </command>
   </extension>

</plugin>
